<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <script src="React_React::js/main.js" />
        <css src="React_React::css/main.css" />
        <css src="css/react-app/main.css" />
        <css src="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" src_type="url"/>
        <css src="https://fonts.googleapis.com/icon?family=Material+Icons" src_type="url"/>
        <script src="https://unpkg.com/@mui/material@5.15.17/umd/material-ui.production.min.js" src_type="url"/>
    </head>
    <body>
        <referenceBlock name="customer_form_register" remove="true"/>
        <referenceBlock name="form_additional_info" remove="true"/>
        <referenceBlock name="page.main.title" remove="true"/>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="react.registration" template="React_React::react-customer-registration.phtml"/>
        </referenceContainer>
    </body>
</page>
