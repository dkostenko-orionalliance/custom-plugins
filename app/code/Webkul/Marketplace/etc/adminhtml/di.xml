<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Catalog\Helper\Category">
        <plugin name="OrionAlliance_NewModule::getAdminStoreCategories"
                type="OrionAlliance\NewModule\Plugin\Helper\Category"
                sortOrder="1" />
    </type>
    <preference for="Magento\Backend\Model\View\Result\Redirect" type="OrionAlliance\NewModule\Model\Rewrite\Backend\View\Result\Redirect"/>
    <type name="Magento\Customer\Controller\Adminhtml\Index\Save">
        <plugin name="OrionAlliance_NewModule::CustomerSave" type="OrionAlliance\NewModule\Plugin\Customer\Controller\Adminhtml\Index\Save" sortOrder="1" />
    </type>
    <virtualType name="Magento\Catalog\Ui\DataProvider\Product\Form\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="flags" xsi:type="array">
                    <item name="class" xsi:type="string">OrionAlliance\NewModule\Ui\DataProvider\Product\Form\Modifier\Flags</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                </item>
                <item name="assignSellerTab" xsi:type="array">
                    <item name="class" xsi:type="string">
                        OrionAlliance\NewModule\Ui\DataProvider\Product\Form\Modifier\AssignSeller
                    </item>
                    <item name="sortOrder" xsi:type="number">40</item>
                </item>
            </argument>
        </arguments>
    </virtualType>
     <type name="Magento\Catalog\Block\Adminhtml\Product\Attribute\Edit\Tab\Front">
        <plugin name="wk-seller-allow-front" type="OrionAlliance\NewModule\Plugin\Block\Adminhtml\Product\Attribute\Edit\Tab\Front" sortOrder="1"/>
    </type>
</config>
