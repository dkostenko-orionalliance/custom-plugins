<script type="text/javascript">
require(['jquery'], function ($) {
    $(document).ready(function () {
        // Hide all steps except the first one initially
        $('.registration-step').hide();
        $('#step-1').show();

        // Event handler for clicking the "Next" button
        $('.next-step').click(function () {
            var currentStep = $(this).closest('.registration-step');
            var nextStep = currentStep.next('.registration-step');
            currentStep.hide();
            nextStep.show();
        });

        // Event handler for clicking the "Previous" button
        $('.prev-step').click(function () {
            var currentStep = $(this).closest('.registration-step');
            var prevStep = currentStep.prev('.registration-step');
            currentStep.hide();
            prevStep.show();
        });
    });
});
</script>
