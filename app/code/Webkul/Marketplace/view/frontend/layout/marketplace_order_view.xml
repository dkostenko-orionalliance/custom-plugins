<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="marketplace_order_view_totals"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">View Order Details</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="OrionAlliance\NewModule\Block\Order\View"  name="marketplace_order_view" template="OrionAlliance_NewModule::order/view.phtml" cacheable="false">
                <block class="OrionAlliance\NewModule\Block\Order\Items" name="marketplace_order_items" template="OrionAlliance_NewModule::order/items.phtml" />
                <arguments>
                    <argument name="view_model" xsi:type="object">OrionAlliance\NewModule\ViewModel\HelperViewModel</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="marketplace_order_view">
            <arguments>
                <argument name="view_model" xsi:type="object">OrionAlliance\NewModule\ViewModel\HelperViewModel</argument>
            </arguments>
            <action method="setTemplate" ifconfig="marketplace/general_settings/order_manage">
                <argument name="template" xsi:type="string">OrionAlliance_NewModule::order/manageorder.phtml</argument>
            </action>
        </referenceBlock>
        <block class="OrionAlliance\NewModule\Block\Order\Additional\Info" name="seller.orderitem.info" template="OrionAlliance_NewModule::order/additional/info.phtml">
            <arguments>
                <argument name="view_model" xsi:type="object">OrionAlliance\NewModule\ViewModel\HelperViewModel</argument>
            </arguments>
        </block>
    </body>
</page>
