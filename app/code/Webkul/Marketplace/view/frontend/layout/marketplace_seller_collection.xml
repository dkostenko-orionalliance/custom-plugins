<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="seller-1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="marketplace_seller_top_header" />
    <head>
        <css src="OrionAlliance_NewModule::css/filter.css"/>
        <css src="Magento_Swatches::css/swatches.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="OrionAlliance\NewModule\Block\Collection" name="marketplace_sellercollection" template="OrionAlliance_NewModule::collectionview.phtml" after="-">
                <block class="Magento\Catalog\Block\Product\ProductList\Toolbar" name="product_list_toolbar" template="Magento_Catalog::product/list/toolbar.phtml">
                    <block class="Magento\Theme\Block\Html\Pager" name="product_list_toolbar_pager"/>
                </block>
                <action method="setToolbarBlockName">
                    <argument name="name" xsi:type="string">product_list_toolbar</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="marketplace_sellercollection">
            <block class="OrionAlliance\NewModule\Block\Sellercategory" name="marketplace_sellercollectionleft" template="OrionAlliance_NewModule::collectionleft.phtml" before="-"/>
        </referenceContainer>
        <referenceContainer name="marketplace_sellercollectionleft">
            <block class="OrionAlliance\NewModule\Block\Collection\Navigation\Category" name="marketplace_sellercollection_layered_navigation" before="-" template="OrionAlliance_NewModule::seller/collection/layer/view.phtml">
                <block class="Magento\LayeredNavigation\Block\Navigation\State" name="marketplace.catalog.navigation.state" as="state" template="OrionAlliance_NewModule::seller/collection/layer/state.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">OrionAlliance\NewModule\ViewModel\HelperViewModel</argument>
                    </arguments>
                </block>
                <block class="Magento\LayeredNavigation\Block\Navigation\FilterRenderer" name="marketplace.catalog.navigation.renderer" as="renderer" template="OrionAlliance_NewModule::seller/collection/layer/filter.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">OrionAlliance\NewModule\ViewModel\HelperViewModel</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
        <referenceBlock name="marketplace_sellercollection">
            <arguments>
                <argument name="view_model" xsi:type="object">OrionAlliance\NewModule\ViewModel\HelperViewModel</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="marketplace_sellercollectionleft">
            <arguments>
                <argument name="view_model" xsi:type="object">OrionAlliance\NewModule\ViewModel\HelperViewModel</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
