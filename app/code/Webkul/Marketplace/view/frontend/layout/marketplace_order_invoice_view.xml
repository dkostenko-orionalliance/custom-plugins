<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="marketplace_order_invoice_view_totals"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">View Invoice Details</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="OrionAlliance\NewModule\Block\Order\View"  name="marketplace_order_invoice_view" template="OrionAlliance_NewModule::order/invoice/view.phtml" cacheable="false">
                <block class="OrionAlliance\NewModule\Block\Order\Invoice\Items" name="marketplace_order_invoice_items" template="OrionAlliance_NewModule::order/invoice/items.phtml" />
            </block>
        </referenceContainer>
        <referenceBlock name="marketplace_order_invoice_view">
            <arguments>
                <argument name="view_model" xsi:type="object">OrionAlliance\NewModule\ViewModel\HelperViewModel</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
