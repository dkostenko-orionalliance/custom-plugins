<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="seller-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="marketplace_styles"/>
    <body>
        <referenceBlock name="seller.page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">New Shipment</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="seller.content">
            <block class="OrionAlliance\NewModule\Block\Order\View"  name="marketplace_order_shipment_create" template="OrionAlliance_NewModule::order/shipment/new.phtml" cacheable="false">
                <block class="OrionAlliance\NewModule\Block\Order\View" name="marketplace_order_info" template="OrionAlliance_NewModule::order/info.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">OrionAlliance\NewModule\ViewModel\HelperViewModel</argument>
                    </arguments>
                </block>
                <block class="OrionAlliance\NewModule\Block\Order\View" name="marketplace_order_new_shipment_tracking" template="OrionAlliance_NewModule::order/shipment/new/tracking.phtml"/>
                <block class="OrionAlliance\NewModule\Block\Order\Shipment\Create\Items" name="marketplace_order_new_shipment_items" template="OrionAlliance_NewModule::order/shipment/new/items.phtml" cacheable="false">
                    <block class="Magento\Theme\Block\Html\Pager" name="marketplace_order_item_pager"/>
                </block>
            </block>
            <referenceBlock name="marketplace_order_shipment_create">
                <arguments>
                    <argument name="view_model" xsi:type="object">OrionAlliance\NewModule\ViewModel\HelperViewModel</argument>
                </arguments>
            </referenceBlock>
            <referenceBlock name="marketplace_order_info">
                <arguments>
                    <argument name="view_model" xsi:type="object">OrionAlliance\NewModule\ViewModel\HelperViewModel</argument>
                </arguments>
            </referenceBlock>
            <referenceBlock name="marketplace_order_new_shipment_tracking">
                <arguments>
                    <argument name="view_model" xsi:type="object">OrionAlliance\NewModule\ViewModel\HelperViewModel</argument>
                </arguments>
            </referenceBlock>
            <referenceBlock name="marketplace_order_new_shipment_items">
                <arguments>
                    <argument name="view_model" xsi:type="object">OrionAlliance\NewModule\ViewModel\HelperViewModel</argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
